-#     グループを作成しました

.wrapper
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name
          t_ishihara
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
            =link_to "/groups/new" do
              = fa_icon 'edit'
          %li.side-header__box__menu__edit-user
            =link_to "/users/sample/edit" do
              = fa_icon 'cog'
    .groups
      =link_to "/groups/sample/messages" do
        .group
          .group__group-name
            sample
          .group__lastest-message
            fuga
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group
          sample
        %ul.main-header__left-box__member-list
          Member：
          %li.main-header__left-box__member-list__member
            t_ishihara
      =link_to "/groups/sample/edit" do
        .main-header__edit-btn
          Edit
    .messages
      .message
        .message__upper-info
          %p.message__upper-info__talker
            t_ishihara
          %p.message__upper-info__date
            2019/10/16(Wed) 12:32:55
        %p.message__text
          hoge
      .message
        .message__upper-info
          %p.message__upper-info__talker
            t_ishihara
          %p.message__upper-info__date
            2019/10/16(Wed) 13:54:06
        %p.message__text
          fuga
    .form
      %form.new_message
        .input-box
          %input.input-box__text{ :type => "text", :placeholder => "type a message"}/
          %label.input-box__image
            = fa_icon 'image'
            %input.input-box__image__file{:type => "file"}/
        %input.submit-btn{:type => "submit", :value => "Send"}/
